FROM node:19-alpine
WORKDIR /app

ARG NEXT_PUBLIC_MSAL_CLIENT_ID
ARG NEXT_PUBLIC_MSAL_TENANT_ID
ARG NEXT_PUBLIC_MSAL_REDIRECT_URL

ENV NEXT_PUBLIC_MSAL_CLIENT_ID=$NEXT_PUBLIC_MSAL_CLIENT_ID
ENV NEXT_PUBLIC_MSAL_TENANT_ID=$NEXT_PUBLIC_MSAL_TENANT_ID
ENV NEXT_PUBLIC_MSAL_REDIRECT_URL=$NEXT_PUBLIC_MSAL_REDIRECT_URL

RUN apk add git vim

# Expose the port the app will run on
EXPOSE 3000

# Start the application
CMD ["tail", "-f", "/dev/null"]


